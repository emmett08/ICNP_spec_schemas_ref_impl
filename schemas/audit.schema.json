{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/icnp/schemas/audit.schema.json",
  "title": "ICNP Audit Event Message",
  "$defs": {
    "AuditEvent": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "event_id",
        "session_id",
        "event_type",
        "actor",
        "timestamp",
        "severity",
        "details"
      ],
      "properties": {
        "event_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "session_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "related_message_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "invocation_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "event_type": {
          "type": "string",
          "enum": [
            "contract_accepted",
            "token_issued",
            "execution_started",
            "execution_completed",
            "denied",
            "violation",
            "rollback",
            "info"
          ]
        },
        "actor": {
          "$ref": "common.schema.json#/$defs/Actor"
        },
        "timestamp": {
          "$ref": "common.schema.json#/$defs/DateTime"
        },
        "severity": {
          "type": "string",
          "enum": [
            "info",
            "warn",
            "error"
          ]
        },
        "details": {
          "type": "object"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "envelope.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "audit_event"
        },
        "phase": {
          "const": "audit"
        },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "event"
          ],
          "properties": {
            "event": {
              "$ref": "#/$defs/AuditEvent"
            }
          }
        }
      }
    }
  ]
}
