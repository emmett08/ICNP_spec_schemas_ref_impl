{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/icnp/schemas/envelope.schema.json",
  "title": "ICNP Message Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "icnp_version",
    "type",
    "phase",
    "message_id",
    "session_id",
    "timestamp",
    "sender",
    "payload"
  ],
  "properties": {
    "icnp_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z.-]+)?$"
    },
    "type": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "phase": {
      "type": "string",
      "enum": [
        "intent",
        "capability",
        "contract",
        "token",
        "execution",
        "audit",
        "error",
        "revoke"
      ]
    },
    "message_id": {
      "$ref": "common.schema.json#/$defs/UUID"
    },
    "session_id": {
      "$ref": "common.schema.json#/$defs/UUID"
    },
    "timestamp": {
      "$ref": "common.schema.json#/$defs/DateTime"
    },
    "sender": {
      "$ref": "common.schema.json#/$defs/Actor"
    },
    "recipient": {
      "$ref": "common.schema.json#/$defs/Actor"
    },
    "in_reply_to": {
      "$ref": "common.schema.json#/$defs/UUID"
    },
    "trace": {
      "$ref": "common.schema.json#/$defs/Trace"
    },
    "payload": {
      "type": "object"
    },
    "extensions": {
      "type": "object"
    }
  }
}
