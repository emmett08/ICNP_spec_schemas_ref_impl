{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/icnp/schemas/error.schema.json",
  "title": "ICNP Error Message",
  "$defs": {
    "Error": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "error_id",
        "code",
        "message",
        "retryable",
        "timestamp"
      ],
      "properties": {
        "error_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "code": {
          "type": "string",
          "enum": [
            "ICNP-001",
            "ICNP-002",
            "ICNP-003",
            "ICNP-004",
            "ICNP-005",
            "ICNP-006"
          ]
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "details": {
          "type": "object"
        },
        "retryable": {
          "type": "boolean"
        },
        "related_message_id": {
          "$ref": "common.schema.json#/$defs/UUID"
        },
        "timestamp": {
          "$ref": "common.schema.json#/$defs/DateTime"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "envelope.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "error"
        },
        "phase": {
          "const": "error"
        },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "error"
          ],
          "properties": {
            "error": {
              "$ref": "#/$defs/Error"
            }
          }
        }
      }
    }
  ]
}
