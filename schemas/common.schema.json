{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/icnp/schemas/common.schema.json",
  "title": "ICNP Common Definitions",
  "type": "object",
  "$defs": {
    "UUID": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "DateTime": {
      "type": "string",
      "format": "date-time"
    },
    "Actor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "role"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "role": {
          "type": "string",
          "enum": [
            "orchestrator",
            "agent",
            "tool",
            "service",
            "user"
          ]
        },
        "display_name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        }
      }
    },
    "Trace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "correlation_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "span_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "parent_span_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        }
      }
    },
    "Hash": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "alg",
        "value"
      ],
      "properties": {
        "alg": {
          "type": "string",
          "enum": [
            "sha256"
          ]
        },
        "value": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        }
      }
    },
    "Signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "alg",
        "value",
        "signed_by",
        "signed_at"
      ],
      "properties": {
        "alg": {
          "type": "string",
          "enum": [
            "hmac-sha256",
            "ed25519",
            "rsa-pss-sha256"
          ]
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "key_id": {
          "type": "string",
          "minLength": 1
        },
        "signed_by": {
          "type": "string",
          "minLength": 1
        },
        "signed_at": {
          "$ref": "#/$defs/DateTime"
        }
      }
    }
  }
}
