{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://multi-agent-orchestrator.dev/schemas/icnp/capability.schema.json",
  "title": "ICNP Capability Schema",
  "description": "Schema for capability disclosure in ICNP",
  "type": "object",
  "required": [
    "icnp_version",
    "phase",
    "in_reply_to",
    "capabilities",
    "responder"
  ],
  "properties": {
    "icnp_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "phase": {
      "type": "string",
      "const": "capability_disclosure"
    },
    "in_reply_to": {
      "type": "string",
      "format": "uuid"
    },
    "capabilities": {
      "type": "array",
      "items": { "$ref": "#/definitions/Capability" }
    },
    "limitations": {
      "type": "array",
      "items": { "$ref": "#/definitions/Limitation" }
    },
    "resource_requirements": {
      "$ref": "#/definitions/ResourceRequirements"
    },
    "responder": {
      "$ref": "#/definitions/Responder"
    }
  },
  "definitions": {
    "Capability": {
      "type": "object",
      "required": ["id", "action", "scope", "confidence"],
      "properties": {
        "id": { "type": "string" },
        "action": {
          "type": "string",
          "enum": [
            "read",
            "write",
            "delete",
            "execute",
            "simulate",
            "suggest",
            "decide",
            "delegate",
            "read-write",
            "analyze",
            "transform",
            "orchestrate",
            "audit"
          ]
        },
        "scope": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "requires_approval": {
          "type": "boolean",
          "default": false
        },
        "side_effects": {
          "type": "string",
          "enum": ["none", "minimal", "moderate", "significant"],
          "default": "none"
        },
        "prerequisites": {
          "type": "array",
          "items": { "type": "string" }
        },
        "resource_requirements": {
          "$ref": "#/definitions/ResourceRequirements"
        },
        "certifications": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "Limitation": {
      "type": "object",
      "required": ["id", "action", "scope"],
      "properties": {
        "id": { "type": "string" },
        "action": { "type": "string" },
        "scope": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "reason": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["absolute", "conditional"],
          "default": "absolute"
        },
        "conditions": { "type": "object" }
      }
    },
    "ResourceRequirements": {
      "type": "object",
      "properties": {
        "compute": {
          "type": "object",
          "properties": {
            "cpu_cores": { "type": "number", "minimum": 0 },
            "memory_gb": { "type": "number", "minimum": 0 }
          }
        },
        "estimated_duration_seconds": { "type": "number", "minimum": 0 }
      }
    },
    "Responder": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" },
        "certifications": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
