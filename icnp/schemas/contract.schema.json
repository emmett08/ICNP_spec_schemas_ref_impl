{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://multi-agent-orchestrator.dev/schemas/icnp/contract.schema.json",
  "title": "ICNP Contract Schema",
  "description": "Schema for negotiated contracts in ICNP",
  "type": "object",
  "required": [
    "icnp_version",
    "phase",
    "contract_id",
    "agreed_actions",
    "execution_constraints"
  ],
  "properties": {
    "icnp_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "phase": {
      "type": "string",
      "const": "contract_negotiation"
    },
    "contract_id": {
      "type": "string",
      "format": "uuid"
    },
    "agreed_actions": {
      "type": "array",
      "items": { "$ref": "#/definitions/AgreedAction" }
    },
    "forbidden_actions": {
      "type": "array",
      "items": { "$ref": "#/definitions/ForbiddenAction" }
    },
    "execution_constraints": {
      "$ref": "#/definitions/ExecutionConstraints"
    },
    "approval_chain": {
      "type": "array",
      "items": { "$ref": "#/definitions/Approval" }
    },
    "signatures": {
      "$ref": "#/definitions/Signatures"
    }
  },
  "definitions": {
    "AgreedAction": {
      "type": "object",
      "required": ["capability_id", "approved"],
      "properties": {
        "capability_id": { "type": "string" },
        "approved": { "type": "boolean" },
        "conditions": { "type": "object" },
        "max_invocations": { "type": "integer", "minimum": 1 }
      }
    },
    "ForbiddenAction": {
      "type": "object",
      "required": ["action", "scope", "reason"],
      "properties": {
        "action": { "type": "string" },
        "scope": { "type": "string" },
        "reason": { "type": "string" }
      }
    },
    "ExecutionConstraints": {
      "type": "object",
      "properties": {
        "audit_level": {
          "type": "string",
          "enum": ["none", "minimal", "standard", "full"],
          "default": "standard"
        },
        "logging_required": {
          "type": "boolean",
          "default": true
        },
        "rollback_required": {
          "type": "boolean",
          "default": true
        },
        "max_duration_seconds": {
          "type": "number",
          "minimum": 0
        },
        "checkpoint_interval_seconds": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "Approval": {
      "type": "object",
      "required": ["approver", "approved_at"],
      "properties": {
        "approver": { "type": "string" },
        "approved_at": { "type": "string", "format": "date-time" },
        "conditions": { "type": "object" }
      }
    },
    "Signatures": {
      "type": "object",
      "properties": {
        "initiator": { "type": "string" },
        "responder": { "type": "string" }
      }
    }
  }
}
